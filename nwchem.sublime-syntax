    scope: comment.line.number-sign
    match: \#.+

  - comment: digits
    scope: constant.numeric
    match: \b([0-9]+([.][0-9]+)?|[0-9]+.d[0-9]|.d[0-9]|[0-9]+([.][0-9]+)?d[+][0-9][0-9]|[0-9]+([.][0-9]+)?d[-][0-9][0-9]|[0-9]+([.][0-9]+)?d[+][0-9]|[0-9]+([.][0-9]+)?d[-][0-9]|[0-9]e[0-9][0-9]|[0-9]e[+][0-9]|[0-9]e-[0-9]|[0-9]e[+][0-9][0-9]|[0-9]e-[0-9][0-9]|[0-9]+([.][0-9]+)?e[+][0-9][0-9]|[0-9]+([.][0-9]+)?e[-][0-9][0-9]|[0-9]E[0-9]|[0-9]E[+][0-9]|[0-9]E-[0-9]|[0-9]E[+][0-9][0-9]|[0-9]E-[0-9][0-9]|[0-9]+([.][0-9]+)?E[+][0-9][0-9]|[0-9]+([.][0-9]+)?E[-][0-9][0-9])\b

  - comment: style keyword
    scope: keyword.operator.nwchem
    match: \b(OPT|opt|spherical|ROOT|root|autosym|noautosym|autoz|noautoz|adjust|Vosko|LDA|PBE96|revPBE|PBEsol|LDA-SIC|LDA-SIC/2|LDA-0.4SIC|LDA-SIC/4|LDA-0.2SIC|PBE96-SIC|PBE96-SIC/2|PBE96-0.4SIC|PBE96-SIC/4|PBE96-0.2SIC|revPBE-SIC|revPBE-SIC/2|revPBE-0.4SIC|revPBE-SIC/4|revPBE-0.2SIC|PBE0|revPBE0|HSE|HF|default|DFT|ODFT|RESTRICTED|UNRESTRICTED|MULT|CG|LMBFGS|pbe0|aperiodic|cyclic|fragment|spc|pbe96|autosym|noautosym|autoz|noautoz|adjust|b3lyp|units|angstroms|print|xyz|autosym|crystal|fermi|PBE0|APERIODIC|CYCLIC|FRAGMENT|SPC|PBE96|AUTOSYM|NOAUTOSYM|AUTOZ|NOAUTOZ|ADJUST|B3LYP|UNITS|ANGSTROMS|PRINT|XYZ|AUTOSYM|CRYSTAL|FERMI)\b

  - comment: read data
    scope: markup.bold.nwchem
    match: \b(echo|title|start|restart|geometry|system|end|nwpw|set|task|scf|dft|dplot|permanent_dir|scratch_dir|memory|print|noprint|unset|stop|bsse|basis|ecce_print|charge|load|zmatrix|zmt|zmat|zcoord|ecp|so|relativistic|prepare|analysis|stepper|hessian|freq|python|rt_tddft|mp2|ccsd|mcscf|cosmo|oniom|bq|constraints|driver|hessian|neb|string|raman|vscf|dntmc|pspw|qmmm|uhf|TITLE|START|RESTART|GEOMETRY|SYSTEM|END|NWPW|SET|TASK|SCF|DFT|DPLOT|PERMANENT_DIR|SCRATCH_DIR|MEMORY|PRINT|NOPRINT|UNSET|STOP|BSSE|BASIS|ECCE_PRINT|CHARGE|LOAD|ZMATRIX|ZMT|ZMAT|ZCOORD|ECP|SO|RELATIVISTIC|PREPARE|ANALYSIS|STEPPER|HESSIAN|FREQ|PYTHON|RT_TDDFT|MP2|CCSD|MCSCF|COSMO|ONIOM|BQ|CONSTRAINTS|DRIVER|HESSIAN|NEB|STRING|RAMAN|VSCF|DNTMC|PSPW|QMMM|UHF|TDDFT)\b #(.+)
    captures:
      1 : markup.quote.nwchem
      2 : string.quoted.double
      # 1 : string.quoted.double

  - comment: fix and unfix
